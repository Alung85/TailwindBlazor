@page "/"

<PageTitle>Home</PageTitle>

<div class="min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Hello, TailwindBlazor!</h1>
    <p class="text-gray-600 mb-6">
      This page is styled with Tailwind CSS v4, integrated via the TailwindBlazor NuGet package.
    </p>
    <div class="flex gap-4">
      <button class="bg-red-800 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
